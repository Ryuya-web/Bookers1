<h3>New book</h3>
<!-- form_for部分 -->
<%= form_for :book, url: book_path, method: :patch do |f| %>
    <% if @book.errors.any? %>
        <% @book.errors.full_messages.each do |msg| %>
        <%= msg %><br>
        <% end %>
    <% end %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>

<br><%= f.submit 'Update Book' %></br>

<% end %>
<%= link_to "show", book_path(@book)%>
<%= link_to "Back" ,books_path%>