<h1>Books</h1>
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
        <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td><%= link_to "show", book_path(book)%></td>
            <td><%= link_to "edit", edit_book_path(book)%></td>
            <td><%= link_to "destroy", book_path(book), method: :delete, data: {confirm:"本当によろしいですか?"} %></td>
        </tr>
        <% end %>
    </tbody>

</table>
<h3>New book</h3>
<!-- form_for部分 -->
<%= form_for :book, url: books_path do |f| %>
    <% if @book.errors.any? %>
        <% @book.errors.full_messages.each do |msg| %>
        <%= msg %><br>
        <% end %>
    <% end %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>

<br><%= f.submit 'Create Book' %></br>

<% end %>